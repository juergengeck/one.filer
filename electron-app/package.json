{
  "name": "one-filer-login",
  "version": "1.0.0",
  "description": "ONE Filer Login App",
  "main": "dist/main.js",
  "scripts": {
    "build": "webpack && npm run build-css",
    "build-css": "tailwindcss -i ./src/globals.css -o ./dist/globals.css --watch=false",
    "watch": "webpack --watch",
    "start": "electron .",
    "start-dev": "npm run build && electron .",
    "dev": "npm run build && electron . --dev",
    "build-win": "npm run build && electron-builder --win",
    "dist": "npm run build && electron-builder",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.10",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.10.5",
    "autoprefixer": "^10.4.21",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "css-loader": "^7.1.2",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "html-webpack-plugin": "^5.6.3",
    "jest": "^29.7.0",
    "lucide-react": "^0.525.0",
    "png2ico": "^0.4.1",
    "postcss": "^8.5.6",
    "postcss-loader": "^8.1.1",
    "sharp": "^0.34.3",
    "style-loader": "^4.0.0",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^3.4.17",
    "ts-jest": "^29.4.0",
    "ts-loader": "^9.5.2",
    "typescript": "^5.3.3",
    "webpack": "^5.100.2",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-tabs": "^1.1.12",
    "@radix-ui/react-tooltip": "^1.2.7",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "date-fns": "^4.1.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "recharts": "^3.1.0"
  },
  "build": {
    "appId": "com.onefiler.login",
    "productName": "ONE Filer Login",
    "directories": {
      "output": "dist-app"
    },
    "files": [
      "dist/**/*",
      "assets/**/*",
      "index.html",
      "index-react.html",
      "style.css"
    ],
    "icon": "assets/icon.png",
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/paul_reading.png",
      "requestedExecutionLevel": "highestAvailable",
      "signAndEditExecutable": false,
      "signDlls": false
    },
    "publish": null,
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
