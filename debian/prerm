#!/bin/bash
set -e

# Pre-removal script for one-leute-replicant
echo "ðŸ›‘ Stopping ONE Leute Replicant..."

# Stop the service if it's running
if systemctl is-active --quiet one-leute-replicant.service; then
    systemctl stop one-leute-replicant.service
    echo "âœ… Stopped ONE Leute Replicant service"
fi

# Disable the service
if systemctl is-enabled --quiet one-leute-replicant.service; then
    systemctl disable one-leute-replicant.service
    echo "âœ… Disabled ONE Leute Replicant service"
fi

echo "ðŸ”§ ONE Leute Replicant service stopped and disabled" 