{
    "compilerOptions": {
        "noEmit": false,
        "alwaysStrict": true,
        "outDir": "lib",
        "isolatedModules": false,
        "moduleResolution": "node",
        "sourceMap": true,
        "emitDeclarationOnly": false,
        "declaration": true,
        "declarationMap": false,
        "downlevelIteration": false,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "importHelpers": false,
        "lib": ["esnext", "dom"],
        "module": "esnext",
        "target": "esnext",
        "strict": true,
        "newLine": "LF",
        "allowJs": true,
        "checkJs": false,
        "noUnusedLocals": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "skipLibCheck": true,
        "types": ["mocha", "node"],
        "typeRoots": ["./src/types", "./node_modules/@types"]
    },
    "include": [
        "src/**/*.ts",
        "src/types/*.d.ts"
    ],
    "exclude": [
        "node_modules",
        "lib",
        "scripts",
        "test",
        "windows-installer",
        "electron-app",
        "**/*.test.ts",
        "**/*.spec.ts"
    ]
}
