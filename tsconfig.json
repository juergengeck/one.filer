{
    "compilerOptions": {
        "noEmit": false,
        "noEmitOnError": false,
        "alwaysStrict": true,
        "outDir": "lib",
        "isolatedModules": false,
        "moduleResolution": "node",
        "sourceMap": true,
        "emitDeclarationOnly": false,
        "declaration": true,
        "declarationMap": false,
        "downlevelIteration": false,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "importHelpers": false,
        "lib": ["esnext", "dom"],
        "module": "esnext",
        "target": "esnext",
        "strict": false,
        "newLine": "LF",
        "allowJs": true,
        "checkJs": false,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "removeComments": true,
        "preserveConstEnums": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": false,
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "types": ["mocha", "node"],
        "typeRoots": ["./src/types", "./node_modules/@types"],
        "paths": {
            "@refinio/one.core": ["./node_modules/@refinio/one.core/lib/index"],
            "@refinio/one.core/*": ["./node_modules/@refinio/one.core/*"],
            "@refinio/one.models": ["./node_modules/@refinio/one.models/lib/models/index"],
            "@refinio/one.models/*": ["./node_modules/@refinio/one.models/*"]
        }
    },
    "include": [
        "src/**/*.ts",
        "src/types/*.d.ts"
    ],
    "exclude": [
        "node_modules",
        "lib",
        "scripts",
        "test",
        "windows-installer",
        "electron-app",
        "**/*.test.ts",
        "**/*.spec.ts",
        "refinio.api/**/*",
        "src/fileSystems/PerformantObjectsFileSystem.ts"
    ]
}
