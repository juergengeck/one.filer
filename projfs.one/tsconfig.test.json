{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "rootDir": "./",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "types": ["node", "mocha", "chai"]
  },
  "include": [
    "src/**/*",
    "test/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build"
  ],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node",
    "transpileOnly": true,
    "compilerOptions": {
      "module": "ES2022",
      "target": "ES2022",
      "allowJs": true
    }
  }
}